<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="kr.tekit.lion.daongil.presentation.login.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="kr.tekit.lion.daongil.presentation.login.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/to_selectInterestFragment"
            app:destination="@id/selectInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectInterestFragment"
        android:name="kr.tekit.lion.daongil.presentation.login.fragment.SelectInterestFragment"
        android:label="fragment_select_interest"
        tools:layout="@layout/fragment_select_interest" />
</navigation>