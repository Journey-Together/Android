<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Bottomnavigation 글자 설정-->
    <style name="BottomNaviTab" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>
    <style name="BottomNaviTab.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- Main Toolbar Title TextApperance 설정 -->
    <style name="Theme.Toolbar.Main.Title" parent="">
        <item name="android:textSize">@dimen/font_big1</item>
        <item name="android:fontFamily">@font/cafe24_oneprettynight</item>
        <item name="android:textColor">@color/toolbar_main_title</item>
        <item name="android:text">@string/toolbar_app_name</item>
    </style>

    <style name="Theme.Toolbar.Main.Title.Color" parent="">
        <item name="android:textSize">@dimen/font_big1</item>
        <item name="android:fontFamily">@font/cafe24_oneprettynight</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:text">@string/toolbar_app_name</item>
    </style>
  
    <!-- 상세 Toolbar Title TextApperance 설정 -->
    <style name="Theme.Toolbar.Title" parent="">
        <item name="android:textSize">@dimen/font_big2</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tabLayout_text_appearance" parent="">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/tab_layout_common_text</item>
        <item name="android:textSize">@dimen/font_big3</item>
    </style>

    <style name="tabLayout_text_appearance.Active" parent="">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_big3</item>
    </style>

    <!-- Fab 둥근 모서리 스타일 -->
    <style name="RoundedExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearance">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="map_category_chip">
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@color/chip_title</item>
        <item name="android:elevation">5dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipIcon">@drawable/drop_down_icon</item>
        <item name="chipCornerRadius">20dp</item>
    </style>

    <style name="detail_category_chip" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:textColor">@color/detail_category_chip_state_color</item>
        <item name="chipStartPadding">8dp</item>
        <item name="android:checkable">true</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="chipStrokeColor">@color/detail_category_chip_state_color</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipIconTint">@color/detail_category_chip_state_color</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="area_auto_complete_text_input_layout" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:strokeColor">@color/box_stroke</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_state_color</item>
        <item name="endIconTint">@color/select_area_end_icon</item>
        <item name="hintTextColor">@color/select_area_end_icon</item>
    </style>

    <style name="area_auto_complete_text_view">
        <item name="android:textColor">@color/select_area_text</item>
        <item name="hintTextColor">@color/select_area_text</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="backgroundTint">@color/select_area</item>
        <item name="endIconTint">@color/select_area</item>
    </style>

    <style name="category_bottom_sheet_dialog_theme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="bottomSheetStyle">@style/round_corner_modal</item>
    </style>
    
    <style name="category_option_button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/category_selected_button</item>
        <item name="android:backgroundTint">@color/category_unselected_button</item>
    </style>

    <style name="round_corner_modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <!-- DateRangePicker 색상 변경-->
    <style name="DateRangePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialButtonStyle">@style/DatePickerTextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/DatePickerButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DatePickerButton</item>
    </style>

    <style name="DatePickerButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DatePickerTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="iconTint">@color/primary</item>
    </style>
    <!-- 프로필 사진 동그라미로 cut -->
    <style name="profile_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>
</resources>